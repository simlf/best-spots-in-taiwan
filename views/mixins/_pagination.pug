mixin pagination(page, pages, count)
  .pagination
    .pagination__prev
      //- if not on the first page
      if page > 1
        a(href=`/spots/page/${page - 1}`) Prev
    .pagination__text
      p Page #{page} of #{pages} - #{count} total results
    .pagination__next
      //- if not on the last page
      if page < pages
        a(href=`/spots/page/${parseFloat(page) + 1}`) Next
