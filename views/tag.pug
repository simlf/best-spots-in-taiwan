extends layout

include mixins/_spotCard
block content
  .inner
    h2 #{tag || 'Tags'}
    ul.tags
      each t in tags
        li.t
          a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
            span.tag__text= t._id
            span.tag__count= t.count
    .spots
      each spot in spots
        +spotCard(spot)
